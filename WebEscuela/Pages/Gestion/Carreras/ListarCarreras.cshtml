@page
@model WebEscuela.Pages.Gestion.Carreras.ListarCarrerasModel
@using WebEscuela.Service.DTOs
@{
    ViewData["Title"] = "Gestión de Carreras";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Gestión de Carreras</h1>
        <a asp-page="./AgregarCarrera" class="btn btn-primary shadow">
            <i class="bi bi-person-plus-fill me-2"></i> Crear nuevo carrera
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover border">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Sigla</th>
                    <th>Duracion</th>
                    <th>Modalidad</th>
                    <th>Turno</th>
                    <th>Preceptor</th>
                    <th class="text-center">Opciones</th>
                </tr>
            </thead>
            <tbody>

                @* BUCLE PRINCIPAL: Llena la lista con las Carreras *@
                @foreach (CarrerasListadoDTO item in Model.Carreras)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Sigla</td>
                        <td>@item.DuracionAnios</td>
                        <td>@item.Modalidad</td>
                        <td>@item.Turno</td>
                        <td>@item.Preceptor</td>

                        <td class="text-center">
                            <div class="dropdown position-static">
                                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="userActions_@item.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear-fill"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userActions_@item.Id">
                                    <li><a class="dropdown-item" asp-page="/Gestion/Materias/ListarMaterias" asp-route-carreraId="@item.Id" asp-route-carreraNombre="@item.Nombre">Listar Materias</a></li>
                                    <li><a class="dropdown-item" asp-page="/Gestion/Materias/AgregarMateria" asp-route-carreraId="@item.Id" asp-route-carreraNombre="@item.Nombre">Agregar Materias</a></li>
                                    <li><a class="dropdown-item" asp-page="./EditarCarrera" asp-route-CarreraId="@item.Id">Modificar</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button type="button"
                                                class="dropdown-item text-danger delete-btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteModalBase"
                                                data-id="@item.Id"
                                                data-nombre="@item.Nombre"
                                                data-sigla="@item.Sigla">
                                            Eliminar
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="deleteModalBase" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación de Carrera</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar la carrera
                    <strong id="carreraNombrePlaceholder"></strong>
                    (<span id="carreraSiglaPlaceholder"></span>)?
                    Esta acción es irreversible.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                    <form id="deleteFormBase" method="post" asp-page-handler="Delete">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Logica JavaScript que llena el Eliminar Carrera
            $('#deleteModalBase').on('show.bs.modal', function (event) {

                var button = $(event.relatedTarget);

                var carreraId = button.data('id');
                var carreraNombre = button.data('nombre');
                var carreraSigla = button.data('sigla');

                // Inyectar datos en el mensaje de confirmación
                $('#carreraNombrePlaceholder').text(carreraNombre);
                $('#carreraSiglaPlaceholder').text(carreraSigla);

                // Configurar la URL del formulario de POST
                var form = $('#deleteFormBase');
                form.attr('action', '?handler=Delete&id=' + carreraId);
            });
        });
    </script>
}