@page
@model WebEscuela.Pages.Gestion.UsuariosModel
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<h1>Gestión de Usuarios</h1>

<div class="mb-3 text-end">
    <a asp-page="/Gestion/Usuarios/AgregarUsuario" class="btn btn-primary">Crear nuevo</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Correo</th>
            <th>DNI</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Usuarios != null && Model.Usuarios.Any())
        {
            foreach (var usuario in Model.Usuarios)
            {
                <tr>
                    <td>@usuario.CorreoElectronico</td>
                    <td>@usuario.Dni</td>
                    <td>@Model.RolesDisponibles.FirstOrDefault(r => r.Id == usuario.RolId)?.Nombre</td>
                    <td>
                        <a asp-page="/Gestion/Usuarios/EditarUsuario" asp-route-dni="@usuario.Dni" class="btn btn-sm btn-secondary">
                            Editar
                        </a>
                        <form method="post" asp-page-handler="Eliminar" asp-route-dni="@usuario.Dni" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hay usuarios registrados.</td>
            </tr>
        }
    </tbody>
</table>

