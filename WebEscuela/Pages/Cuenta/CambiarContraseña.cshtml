@page
@model WebEscuela.Pages.Cuenta.CambiarContraseñaModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container-fluid mt-4">
    <h1 class="display-5">Cambiar contraseña</h1>
    <hr />

    <form method="post">
        @* Resumen de errores generales del modelo y de validación *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        @* ⭐️ Mostrar Error de Lógica de Negocio (si es necesario) *@
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            </div>
        }

        <div class="row">
            <div class="col-md-6">
                <h3 class="mb-3">Datos Personales</h3>

                <div class="form-group mb-3">
                    <label asp-for="Input.Contraseña"></label>
                    <input asp-for="Input.Contraseña" class="form-control" />
                    <span asp-validation-for="Input.Contraseña" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmarContraseña"></label>
                    <input asp-for="Input.ConfirmarContraseña" class="form-control" />
                    <span asp-validation-for="Input.ConfirmarContraseña" class="text-danger"></span>
                </div>

            </div>

        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success">
                <i class="bi bi-person-plus-fill me-2"></i> Cambiar contraseña
            </button>
        </div>
    </form>
</div>