@page
@model WebEscuela.Pages.AlumnoAcciones.ListaInscripcionesModel
@{
    ViewData["Title"] = "Listas de Inscripciones";
}
<div class="container mt-4">
    <h1 class="display-6 mb-4"><i class="bi bi-journal-text me-2"></i>Mi Estado de Inscripciones</h1>

    <div class="row">
        @if (Model.Inscripciones.Any())
        {
            @foreach (var item in Model.Inscripciones)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-start border-4 @(item.EstadoId == 1 ? "border-warning" : item.EstadoId == 2 ? "border-success" : "border-danger")">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title text-primary">@item.MateriaNombre</h5>
                                @* Badge Dinámico *@
                                @if (item.EstadoId == 1)
                                {
                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                }
                                else if (item.EstadoId == 2)
                                {
                                    <span class="badge bg-success">Aceptado</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Rechazado</span>
                                }
                            </div>

                            <p class="card-text mb-1"><strong>Carrera:</strong> @item.CarreraNombre</p>
                            <p class="card-text mb-1"><strong>Docente:</strong> @item.DocenteAsignado</p>
                            <p class="card-text mb-1 text-muted small">
                                <i class="bi bi-calendar-event"></i> Solicitado el: @item.FechaInscripcion.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">Modalidad: @item.TipoCursado</small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-light border shadow-sm">
                    <p class="mb-0">Aún no te has inscripto a ninguna materia.</p>
                    <a asp-page="./InscribirMaterias" class="btn btn-primary mt-3">Ir a Inscribirme</a>
                </div>
            </div>
        }
    </div>
</div>