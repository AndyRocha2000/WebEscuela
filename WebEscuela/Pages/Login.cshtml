@page
@model LoginModel
@{
    ViewData["Title"] = "Inicio Sesion";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

        <h2 class="text-center mb-4">🚪 Inicio de Sesión</h2>
        <div class="card shadow-sm">
            <div class="card-body p-4 p-md-5">

                

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.DNI" class="form-label"></label>
                        <input asp-for="Input.DNI" class="form-control" autocomplete="username" autofocus />
                        <span asp-validation-for="Input.DNI" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.DniError))
                        {
                            <div class="text-danger" role="alert">
                                @Model.DniError
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.PasswordError))
                        {
                            <div class="text-danger" role="alert">
                                @Model.PasswordError
                            </div>
                        }
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Iniciar Sesión
                        </button>
                    </div>
                </form>

            </div>
        </div>
        <p class="mt-3 text-center text-muted">
            <a href="#">¿Olvidaste tu contraseña?</a>
        </p>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}